{
  "manifest_version": 3,
  "name": "Image Description AI with Screenshot and TTS",
  "version": "1.3",
  "description": "上傳圖片或截取螢幕，並使用本地 AI 模型生成描述，然後用語音讀出。",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "tts"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "圖像描述 AI"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [{
    "resources": ["transformers.min.js"],
    "matches": ["<all_urls>"]
  }],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}