{
  "manifest_version": 3,
  "name": "Web AI Screen Reader (Beta)",
  "version": "1.0",
  "description": "AI powered screen reader and content analyzer with Moondream2 and Gemini Nano",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "sidePanel",
    "storage",
    "activeTab",
    "tabs",
    "scripting",
    "tts",
    "notifications",
    "microphone",
    "commands"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open AI Screen Reader"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "./lib/transformers300.js",
        "./lib/readability.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "commands": {
    "toggle-voice": {
      "suggested_key": {
        "default": "Ctrl+Shift+F"
      },
      "description": "Toggle voice recording"
    },
    "take-screenshot": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q"
      },
      "description": "Take screenshot"
    }
  }
}